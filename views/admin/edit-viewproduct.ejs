<script>
    // Get form fields
    const form = document.getElementById('addproduct');
    const nameField = form.elements.name;
    const descriptionField = form.elements.description;
    const priceField = form.elements.price;
   
    const quantityField = form.elements.quantity;

    // Add event listener to the form on submit
    form.addEventListener('submit', (event) => {
        // Prevent form submission
        event.preventDefault();

        // Validate name field
        if (!nameField.value.match(/^[a-zA-Z ]+$/)) {
            nameField.classList.add('is-invalid');
            document.getElementById('nameError').textContent = 'Please enter a valid name';
        } else {
            nameField.classList.remove('is-invalid');
            document.getElementById('nameError').textContent = '';
        }

        // Validate description field
        if (descriptionField.value.length < 20) {
            descriptionField.classList.add('is-invalid');
            document.getElementById('descriptionError').textContent = 'Please enter a description of at least 20 characters';
        } else {
            descriptionField.classList.remove('is-invalid');
            document.getElementById('descriptionError').textContent = '';
        }

        // Validate price field
        if (isNaN(priceField.value) || priceField.value <= 25) {
            priceField.classList.add('is-invalid');
            document.getElementById('priceError').textContent = 'Please enter a positive number above 25';
        } else {
            priceField.classList.remove('is-invalid');
            document.getElementById('priceError').textContent = '';
        }

        if (isNaN(quantityField.value) || quantityField.value <= 1) {
            quantityField.classList.add('is-invalid');
            document.getElementById('quantityError').textContent = 'Please enter a positive number above 1';
        } else {
            priceField.classList.remove('is-invalid');
            document.getElementById('quantityError').textContent = '';
        }

        // Validate image field
        

        // If all fields are valid, submit the form
        if (!nameField.classList.contains('is-invalid') && !descriptionField.classList.contains('is-invalid') && !priceField.classList.contains('is-invalid')) {
            form.submit();
        }
    });
</script>