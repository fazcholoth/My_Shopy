    <script>
        function addTocart(proId){
            $.ajax({
                url:"/addto-cart/"+proId,
                method:'get',
                success:(response)=>{
                    if(response.status=='non existing'){
                        let count=$('#cart-count').html()
                        count=parseInt(count)+1
                        $("#cart-count").html(count) 
                    }
                    alert(response.status)
                }
            })
        }
    </script>